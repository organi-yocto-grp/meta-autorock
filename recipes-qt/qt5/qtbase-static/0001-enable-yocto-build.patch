 mkspecs/devices/linux-oe-g++/qmake.conf      | 13 +++++++++++
 mkspecs/devices/linux-oe-g++/qplatformdefs.h | 34 ++++++++++++++++++++++++++++
 3 files changed, 47 insertions(+), 20 deletions(-)
 create mode 100755 mkspecs/devices/linux-oe-g++/qmake.conf
 create mode 100755 mkspecs/devices/linux-oe-g++/qplatformdefs.h

diff --git a/configure b/configure
index cea62fb..b6fd7cf 100755
--- a/configure
+++ b/configure
@@ -565,26 +565,6 @@ fi
 #-------------------------------------------------------------------------------
 
 SYSTEM_VARIABLES="AR RANLIB STRIP OBJDUMP LD CC CXX CFLAGS CXXFLAGS LDFLAGS"
-for varname in $SYSTEM_VARIABLES; do
-    qmakevarname="${varname}"
-    qmakecmdargs=""
-    # use LDFLAGS for autoconf compat, but qmake uses QMAKE_LFLAGS
-    if [ "${varname}" = "LDFLAGS" ]; then
-        qmakevarname="LFLAGS"
-    elif [ "${varname}" = "LD" ]; then
-        qmakevarname="LINK"
-    elif [ "${varname}" = "AR" ]; then
-        # QMAKE_AR needs to be set to "/path/to/ar cqs" but the
-        # environment variable will be set to the command only so we
-        # need to append " cqs" for autoconf compatibility
-        qmakecmdargs=" cqs"
-    fi
-    cmd=`echo \
-'if [ -n "\$'${varname}'" ]; then
-    QMakeVar set QMAKE_'${qmakevarname}' "\$'${varname}${qmakecmdargs}'"
-fi'`
-    eval "$cmd"
-done
 
 # Use CC/CXX to run config.tests
 mkdir -p "$outpath/config.tests"
diff --git a/mkspecs/devices/linux-oe-g++/qmake.conf b/mkspecs/devices/linux-oe-g++/qmake.conf
new file mode 100755
index 0000000..da87b40
--- /dev/null
+++ b/mkspecs/devices/linux-oe-g++/qmake.conf
@@ -0,0 +1,13 @@
+#
+# qmake configuration for the Freescale iMX6 boards (single, dual and quad)
+#
+
+include(../common/linux_device_pre.conf)
+
+QMAKE_CFLAGS       += $${OE_QMAKE_CFLAGS}
+QMAKE_CXXFLAGS   += $${OE_QMAKE_CXXFLAGS}
+QMAKE_LFLAGS        += $${OE_QMAKE_LFLAGS}
+
+include(../common/linux_device_post.conf)
+
+load(qt_config)
